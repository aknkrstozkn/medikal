<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPatient"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="#ffffff" />



    <Button
        android:id="@+id/buttonOutOfDatePres"
        android:textColor="#000000"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="GÜNÜ GEÇMİŞ REÇETELER ("
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarPatient"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"/>

    <Button
        android:id="@+id/buttonValidPres"
        android:textColor="#000000"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="32sp"
        android:text="REÇETELER"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonOutOfDatePres"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"/>

    <Button
        android:id="@+id/buttonSales"
        android:textColor="#000000"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="32sp"
        android:text="SATIŞLAR"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonValidPres"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"/>

    <android.support.design.widget.FloatingActionButton
        app:fabSize="normal"
        app:backgroundTint="@color/colorPrimaryDark"
        android:scaleType="center"
        android:id="@+id/floatingButtonAddSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src= "@drawable/ic_add_circle_black_64dp"/>

</android.support.constraint.ConstraintLayout>